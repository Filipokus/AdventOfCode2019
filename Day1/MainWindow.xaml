<Window x:Class="Day1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day1"
        mc:Ignorable="d"
        Title="The module fuel calculator" Height="200" Width="150" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txtMass" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.222,-2.339"/>
        <Button x:Name="btnCalculateFuel"  Content="Calculate" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="75" Click="btnCalculateFuel_Click"/>
        <Label Content="Module's mass" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtFuelNeeded" HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" Text="To calculate the fuel needed for this module, fill in the module's mass first." VerticalAlignment="Top" Height="99" Width="120"/>
    </Grid>
</Window>
